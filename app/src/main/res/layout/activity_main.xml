<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lu.thebarbershop.Activity.MainActivity">
    <!--切换fragment-->
    <FrameLayout
        android:id="@+id/activity_main_fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"></FrameLayout>
    <!--选项卡组件-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f0f0f0">
        <Button
            android:id="@+id/btn_fragment_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textSize="10dp"
            android:drawableTop="@mipmap/index_on"
            android:paddingTop="5dp"
            android:textColor="#2c2c2c"
            android:text="首页"/>
        <Button
            android:id="@+id/btn_fragment_news"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/news_un"
            android:paddingTop="5dp"
            android:textSize="10dp"
            android:textColor="#8a8a8a"
            android:text="消息"/>
        <Button
            android:id="@+id/btn_fragment_dynamic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@mipmap/dynamic_un"
            android:paddingTop="5dp"
            android:textSize="10dp"
            android:textColor="#8a8a8a"
            android:text="互动"/>

        <Button
            android:id="@+id/btn_fragment_mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="#8a8a8a"
            android:drawableTop="@mipmap/person_un"
            android:paddingTop="5dp"
            android:textSize="10dp"
            android:text="我的"/>
    </LinearLayout>

</RelativeLayout>
